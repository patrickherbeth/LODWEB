function loadJSONNotParse(path, success, error) {
	  var xhr = new XMLHttpRequest();
	  xhr.onreadystatechange = function () {
	    if (xhr.readyState === 4) {
	      if (xhr.status === 200) {
	        success(xhr.responseText);
	      }
	      else {
	        error(xhr);
	      }
	    }
	  };
	  xhr.open('GET', path, true);
	  xhr.send();
	}
	
